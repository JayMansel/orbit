<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:engine="clr-namespace:Orbit.Engine;assembly=Orbit.Engine"
    x:Class="Orbit.MainPage">

    <Grid>
        <Image
            Source="space.png"
            Aspect="Fill" />

        <engine:GameSceneView
            x:Name="GameView"
            BackgroundColor="Transparent"
            StartInteraction="GameView_StartInteraction"
            EndInteraction="GameView_EndInteraction"/>

        <Label x:Name="Texty"
               HorizontalOptions="End"/>

        <Button WidthRequest="30"
                HeightRequest="30"
                VerticalOptions="Center"
                Text="Play"
                x:Name="Play"
                Clicked="PlayButton_Clicked" />

        <Button WidthRequest="30"
                HeightRequest="30"
                VerticalOptions="Start"
                Text="||"
                Clicked="Button_Clicked" />
    </Grid>
</ContentPage>
