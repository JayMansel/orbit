        <Frame
            Padding="0"
            Grid.ColumnSpan="3">
            <Grid ColumnDefinitions="60,60,*">
                <Button
                    BackgroundColor="{Binding SelectedColor}"
                    Clicked="OnColorSelectionButtonClicked"/>

                <Frame
                    WidthRequest="60"
                    Grid.Column="1">
                    <Ellipse
                        x:Name="Preview"
                        HeightRequest="{Binding Path=Value, Source={x:Reference LineThickness}}"
                        WidthRequest="{Binding Path=Value, Source={x:Reference LineThickness}}"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />
                </Frame>

                <Label
                    Text="{Binding TimeRemaining, StringFormat='{}{0:mm}:{0:ss}'}"
                    Grid.ColumnSpan="3"
                    FontSize="30"
                    HorizontalOptions="End"
                    VerticalOptions="Center" />

                <Label
                    Text="{Binding Word}"
                    x:Name="WordLabel"
                    Grid.ColumnSpan="3"
                    FontSize="30"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
            </Grid>
        </Frame>

